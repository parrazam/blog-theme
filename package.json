{
    "name": "casper-parra",
    "description": "A modified version of Ghost 3' Casper theme",
    "demo": "https://blog.parravidales.es",
    "version": "2.0.2",
    "engines": {
        "ghost": ">=5.13.2"
    },
    "devDependencies": {
        "@tryghost/release-utils": "0.8.1",
        "autoprefixer": "10.4.13",
        "beeper": "3.0.0",
        "cssnano": "5.1.14",
        "gscan": "^4.36.0",
        "gulp": "^4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "inquirer": "9.1.4",
        "postcss": "8.4.21",
        "postcss-color-mod-function": "3.0.3",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0"
    },
    "resolutions": {
        "moment": "2.29.2",
        "moment-timezone": "0.5.23"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg",
        "mobile": "assets/screenshot-mobile.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; else echo \"Uncomitted changes found.\" && exit 1; fi",
        "postship": "git fetch && gulp release"
    },
    "author": {
        "name": "Parra",
        "email": "victor@parravidales.es",
        "url": "https://parravidales.es"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/parrazam/blog-theme.git"
    },
    "bugs": "https://github.com/parrazam/blog-theme/issues",
    "contributors": "https://github.com/parrazam/blog-theme/graphs/contributors",
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 25,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "color_scheme": {
                "type": "select",
                "options": [
                    "Light",
                    "Dark",
                    "Auto"
                ],
                "default": "Light"
            }
        }
    },
    "renovate": {
        "extends": [
            "@tryghost:theme"
        ]
    },
    "dependencies": {
        "chokidar": "^3.5.3",
        "glob-parent": "^6.0.2",
        "glob-stream": "^7.0.0",
        "moment": "2.29.4",
        "moment-timezone": "0.5.40",
        "validator": "^13.7.0"
    }
}
